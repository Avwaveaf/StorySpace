    <!-- Headline Style -->
    <style name="TextAppearance.StorySpace.Headline" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/merriweather_headline</item>
        <item name="android:textSize">34sp
        </item> <!-- Recommended headline size for main headings -->
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:lineHeight">40sp</item> <!-- Ensure good readability -->
        <item name="android:fontWeight">400</item> <!-- Regular weight for readability -->
    </style>

    <style name="Theme.StorySpace.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">

        <!-- Customize the text appearance of menu items -->
        <item name="android:textAppearance">@style/TextAppearance.StorySpace.PopupMenuItem</item>
    </style>

    <!-- Optional: Define a custom text appearance for menu items -->
    <style name="TextAppearance.StorySpace.PopupMenuItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/merriweather_headline</item>
    </style>


    <!-- Subheadline Style -->
    <style name="TextAppearance.StorySpace.SubHeadline" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/merriweather_headline</item>
        <item name="android:textSize">24sp</item> <!-- Medium-sized headline for subheaders -->
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Body Text Style -->
    <style name="TextAppearance.StorySpace.BodyText" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/lora_body</item>
        <item name="android:textSize">16sp</item> <!-- Recommended size for body text -->
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:lineHeight">24sp</item> <!-- Adequate line height for reading -->
        <item name="android:fontWeight">400</item> <!-- Regular weight -->
    </style>

    <!-- Small Caption Text -->
    <style name="TextAppearance.StorySpace.Caption" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/lora_body</item>
        <item name="android:textSize">12sp</item> <!-- Small text for captions -->
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Button Text Style -->
    <style name="TextAppearance.StorySpace.Button" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/merriweather_headline</item>
        <item name="android:textSize">14sp</item> <!-- Recommended button text size -->
        <item name="android:textColor">@color/md_theme_onPrimary</item> <!-- High contrast text -->
        <item name="android:textAllCaps">true</item> <!-- Standard practice for buttons -->
        <item name="android:fontWeight">700</item> <!-- Bold for emphasis -->
        <item name="android:letterSpacing">0.1</item> <!-- Extra spacing for legibility -->
    </style>

    <!-- Input Field Text Style -->
    <style name="TextAppearance.StorySpace.InputText" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/lora_body</item>
        <item name="android:textSize">16sp</item> <!-- Consistent with body text -->
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:lineHeight">24sp</item>

        <item name="android:fontWeight">400</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.StorySpace.InputText</item>
    </style>


    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


